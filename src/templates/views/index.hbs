<!DOCTYPE html>
<html lang="en">

{{>head}}

<body>

    {{>header}}

    {{>subheader}}

    <div class="dashBoard">

        <div class="leftContainer">

            <div class="dalyInfoContainer">

                <div class="dailysubContainer">
                    <p class="dailySmallText">costo domicilios</p>
                    <p class="dailyBigText" id="costoDomiciliosHoy">$0,000</p>
                </div>

                <div class="dailysubContainer">
                    <p class="dailySmallText">Dinero recogido</p>
                    <p class="dailyBigText" id="dineroPagadoADomicliariosHoy">$0,000</p>
                </div>

                <div class="dailysubContainer">
                    <p class="dailySmallText">domicilios hoy</p>
                    <p class="dailyBigText" id="numeroDeDomiciosHoy">0</p>
                </div>

            </div>

            <div class="liscontainer" id="liscontainerId">



            </div>

        </div>

        <div class="right-container">

            <div class="right-subContainer">

                <div class="tittleRightSubContainer">
                    Editar Informacion
                </div>
                <input type="text" name="NombreCliente" id="nombreCliente" placeholder="NombreCliente">
                <input type="text" name="direccion" id="direccion" placeholder="direccion">
                <input type="text" name="nombreUnidad" id="nombreUnidad" placeholder="nombre Unidad">
                <input type="text" name="apt" id="apt" placeholder="apt">
                <input type="text" name="tipo de pago" id="pagoEnEfectivo" placeholder="pago en efectivo">
                <input type="text" name="costoDomicilio" id="costoDomicilio" placeholder="costo domicilio">

                <select name="domiciliarios" id="domiciliariosLista">
                    <option value="jhon">jhon</option>
                    <option value="juan">juan</option>
                    <option value="favian">favian</option>
                    <option value="alejo">alejo</option>
                </select>
                <textarea rows="4" cols="50" id="notasDomicilio" class="textareass" placeholder="notas">notas</textarea>
                <textarea rows="4" cols="50" id="pedidoText" class="textareass" placeholder="pedido">pedido</textarea>
                <button id="SaveButon">Save</button>
                <button id="deletButton">Delet</button>

            </div>

        </div>

    </div>

</body>

<script type="module" src="/js/main/main.js"></script>
<script type="module" src="/js/main/updateDailyInfo.js"></script>

</html>